<?xml version="1.0" encoding="UTF-8"?>
<window id="1919">
    <defaultcontrol always="true">2</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <backgroundcolor>background</backgroundcolor>
    <include>OpenClose</include>
    <controls>
        <control type="image">
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$VAR[bgimg]</texture>
            <aspectratio align="left">scale</aspectratio>
        </control>
        <control type="image">
            <centerleft>340</centerleft>
            <top>45</top>
            <width>550</width>
            <height>990</height>
            <texture border="20">images/diffuserounded.png</texture>
            <colordiffuse>gainsboro</colordiffuse>
        </control>
        <control type="image">
            <centerleft>340</centerleft>
            <top>80</top>
            <width>500</width>
            <height>500</height>
            <texture>case.png</texture>
        </control>
        <control type="grouplist">
            <centerleft>340</centerleft>
            <top>600</top>
            <width>500</width>
            <align>left</align>
            <onup>noop</onup>
            <control type="button" id="2">
                <label>Set Temperature</label>
                <width>500</width>
                <align>center</align>
                <textcolor>black</textcolor>
                <focusedcolor>black</focusedcolor>
                <onclick>RunScript(service.netatmo.thermostat,settemp=True)</onclick>
            </control>
            <control type="radiobutton" id="4">
                <selected>SubString(Window(home).Property(netatmo_HomeSetMode),max)</selected>
                <label>Max</label>
                <width>500</width>
                <textcolor>black</textcolor>
                <focusedcolor>black</focusedcolor>
                <radiowidth>116</radiowidth>
                <radioheight>58</radioheight>
                <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect2.png</texturefocus>
                <textureradiofocus aspectratio="keep">maxbutton_FO.png</textureradiofocus>
                <textureradionofocus aspectratio="keep">maxbutton.png</textureradionofocus>
                <radioposx>10</radioposx>
                <textoffsetx>130</textoffsetx>
                <onclick condition="!SubString(Window(home).Property(netatmo_HomeSetMode),max)">RunScript(service.netatmo.thermostat,max=True)</onclick>
                <onclick condition="SubString(Window(home).Property(netatmo_HomeSetMode),max)">RunScript(service.netatmo.thermostat,program=True)</onclick>
            </control>
            <control type="radiobutton" id="5">
                <selected>SubString(Window(home).Property(netatmo_HomeSetMode),off)</selected>
                <label>Off</label>
                <width>500</width>
                <textcolor>black</textcolor>
                <focusedcolor>black</focusedcolor>
                <radiowidth>116</radiowidth>
                <radioheight>58</radioheight>
                <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect2.png</texturefocus>
                <textureradiofocus aspectratio="keep">offbutton_FO.png</textureradiofocus>
                <textureradionofocus aspectratio="keep">offbutton.png</textureradionofocus>
                <radioposx>10</radioposx>
                <textoffsetx>130</textoffsetx>
                <onclick condition="!SubString(Window(home).Property(netatmo_HomeSetMode),off)">RunScript(service.netatmo.thermostat,off=True)</onclick>
                <onclick condition="SubString(Window(home).Property(netatmo_HomeSetMode),off)">RunScript(service.netatmo.thermostat,program=True)</onclick>
            </control>
            <control type="radiobutton" id="6">
                <selected>StringCompare(Window(home).Property(netatmo_HomeSetMode),away)</selected>
                <label>Away</label>
                <width>500</width>
                <textcolor>black</textcolor>
                <focusedcolor>black</focusedcolor>
                <radiowidth>116</radiowidth>
                <radioheight>58</radioheight>
                <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect2.png</texturefocus>
                <textureradiofocus aspectratio="keep">awaybutton_FO.png</textureradiofocus>
                <textureradionofocus aspectratio="keep">awaybutton.png</textureradionofocus>
                <radioposx>10</radioposx>
                <textoffsetx>130</textoffsetx>
                <onclick condition="!StringCompare(Window(home).Property(netatmo_HomeSetMode),away)">RunScript(service.netatmo.thermostat,away=True)</onclick>
                <onclick condition="StringCompare(Window(home).Property(netatmo_HomeSetMode),away)">RunScript(service.netatmo.thermostat,program=True)</onclick>
            </control>
            <control type="radiobutton" id="7">
                <selected>StringCompare(Window(home).Property(netatmo_HomeSetMode),hg)</selected>
                <label>AntiFreeze</label>
                <width>500</width>
                <textcolor>black</textcolor>
                <focusedcolor>black</focusedcolor>
                <radiowidth>116</radiowidth>
                <radioheight>58</radioheight>
                <texturefocus colordiffuse="$VAR[diffuseselect]">images/buttonselect2.png</texturefocus>
                <textureradiofocus aspectratio="keep">hgbutton_FO.png</textureradiofocus>
                <textureradionofocus aspectratio="keep">hgbutton.png</textureradionofocus>
                <radioposx>10</radioposx>
                <textoffsetx>130</textoffsetx>
                <onclick condition="!StringCompare(Window(home).Property(netatmo_HomeSetMode),hg)">RunScript(service.netatmo.thermostat,hg=True)</onclick>
                <onclick condition="StringCompare(Window(home).Property(netatmo_HomeSetMode),hg)">RunScript(service.netatmo.thermostat,program=True)</onclick>
            </control>
        </control>
        <control type="grouplist">
            <centerleft>340</centerleft>
            <top>130</top>
            <width>200</width>
            <height>400</height>
            <align>center</align>
            <itemgap>20</itemgap>
            <control type="label">
                <font>thermo</font>
                <textcolor>black</textcolor>
                <shadowcolor>-</shadowcolor>
                <label>$INFO[Window(home).Property(netatmo_HomeSetTemperature)]</label>
                <align>center</align>
            </control>
            <control type="label">
                <font>thermo2</font>
                <textcolor>black</textcolor>
                <shadowcolor>-</shadowcolor>
                <label>$INFO[Window(home).Property(netatmo_HomeTemperature)]</label>
                <align>center</align>
            </control>
        </control>
