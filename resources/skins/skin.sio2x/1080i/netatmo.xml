        <!--<font>thermo</font>-->
        <!--<label>Module: $INFO[Window(home).Property(netatmo_ModuleName)]</label>-->
        <!--<align>center</align>-->
        <!--</control>-->
        <control type="textbox">
            <top>0</top>
            <left>700</left>
            <width>1100</width>
            <font>size13</font>
            <height>1080</height>
            <label>$INFO[Window(home).Property(netatmo_Battery)][CR]$INFO[Window(home).Property(dev)][CR]----[CR]$INFO[Window(home).Property(ter)]</label>
            <!--<label>until $INFO[Window(home).Property(ManualEnd)][CR]$INFO[Window(home).Property(HomeSetMode)]</label>-->
        </control>
        <control type="image" description="BoilerOn">
            <visible>!IsEmpty(Window(Home).Property(netatmo_RelayCommand))</visible>
            <visible>!StringCompare(Window(Home).Property(netatmo_RelayCommand),0)</visible>
            <left>480</left>
            <top>470</top>
            <width>42</width>
            <height>42</height>
            <texture colordiffuse="red">boiler.png</texture>
            <aspectratio>keep</aspectratio>
        </control>
        <control type="progress" id="200">
            <left>141</left>
            <top>471</top>
            <width>41</width>
            <height>21</height>
            <visible>true</visible>
            <reveal>false</reveal>
            <texturebg>images/transparent.png</texturebg>
            <midtexture border="1" colordiffuse="lime">images/white.png</midtexture>
            <info>-</info>
            <!--<info>Window(Home).Property(netatmo_Battery)</info>-->
        </control>
        <control type="image" description="Battery">
            <left>140</left>
            <top>470</top>
            <width>50</width>
            <height>24</height>
            <texture>battery.png</texture>
        </control>
    </controls>
</window>
